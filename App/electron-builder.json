{
  "appId": "com.hexnode.desktop",
  "productName": "HexNode",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "../Graphics/Logo.png",
    "sign": null,
    "signAndEditExecutable": false,
    "signingHashAlgorithms": [],
    "verifyUpdateCodeSignature": false
  },
  "portable": {
    "artifactName": "HexNode.exe"
  },
  "forceCodeSigning": false
}

